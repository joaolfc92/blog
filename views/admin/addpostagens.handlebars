{{#each erros}}

	<div class="alert alert-danger">{{texto}}</div>

{{else}}	


{{/each}}



<div class="card mb-5">
	<div class="card-body">
		<form action="/admin/postagens/nova" method="POST">
			<label for="nome">Nome :</label>
			<input type="text" name="titulo" class="form-control">
			<label for="slug">Slug :</label>
			<input type="text" name="slug"  class="form-control">
			<label for="descricao">Descrição :</label>
			<input type="text" name="descricao"  class="form-control">
			<label for="conteudo">Conteudo :</label>
			<textarea name="conteudo"  class="form-control" style="height: 400px;"></textarea>
			<label for="categoria" class="mt-3">Categorias :</label>
			<select name="categoria" class="form-control mb-5 custom-select">
				{{#each categorias}}
					<option value="{{_id}}">{{nome}}</option>
				{{else}}
					<option value="0">Nenhuma Categoria Registrada</option>
				{{/each}}
			</select>
			<button class="btn btn-success mt-3" type="submit">Enviar Post</button> 
		</form>
	</div>
</div>
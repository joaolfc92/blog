
<h2>Nova Categoria</h2>
<hr> 
<a href="/admin/categorias/add"> <button type="button" class="btn btn-success">Adicionar Categoria</button> </a>

{{#each categorias}}
	<div class="card mt-3">
  		<div class="card-body">
   			 <h5 class="card-title">{{nome}}</h5>
    		<p class="card-text">Slug : {{slug}}</p><br>
			<small>Data do Post: {{date}}</small>
		</div>

		<div class="btn">
			<a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-outline-warning">Editar Categoria</button></a>
			<!-- caminho do link a ser redirecionado + {{_id}} captura o id dinamicamente -->
			<form action="/admin/categorias/deletar" method="POST" >
				<input type="hidden" name="id" value="{{_id}}">
			<a href="#"><button class="btn btn-outline-danger mt-3">Deletar Categoria</button> </a>	
			</form>
		</div>
	</div>
{{else}}
		<h4 class="mt-3">Nunhuma categoria registrada !!</h4>
{{/each}}


<style>
.card{
	display: flex;
    flex-direction: row;
}


.btn{
	align-self: center;
	cursor: pointer;
}
</style>

